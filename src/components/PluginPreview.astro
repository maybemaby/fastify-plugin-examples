---
import type { PluginFrontMatter } from "../lib/types";
import Badge from "./Badge.astro";

const props = Astro.props as {
  plugin: PluginFrontMatter;
  url: string;
};
---

<div
  class="flex flex-col gap-5 dark:bg-slate-700 bg-zinc-200 border-2 dark:border-slate-900 border-zinc-500 px-5 py-3 rounded-md w-full md:min-w-[360px] md:flex-1 h-[250px]"
>
  <a href={props.url} class="w-fit text-xl underline">{props.plugin.name}</a>
  <div class="flex flex-row gap-2 items-center overflow-x-auto">
    {props.plugin.tags.map((tag) => <Badge>{tag}</Badge>)}
  </div>
  <p class="overflow-y-auto">{props.plugin.description}</p>
</div>
